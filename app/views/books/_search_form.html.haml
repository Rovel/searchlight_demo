= form_for @search, url: root_path, remote: remote_opt, method: :get do |f|
  %fieldset
    = f.label      :title
    = f.text_field :title

  %fieldset
    = f.label      :author_name_like
    = f.text_field :author_name_like

  %fieldset
    = f.label   :category_id
    = f.select  :category_id, categories_collection, include_blank: true

  %button{type: :reset} Clear
  = f.submit 'Search'
